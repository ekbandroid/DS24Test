<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/row_item_margin_horizontal"
    android:paddingTop="@dimen/row_item_margin_vertical"
    tools:ignore="UnusedAttribute">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_1x"
        android:padding="@dimen/padding_2x"
        app:cardBackgroundColor="@color/messageBackgroundGreen"
        app:cardCornerRadius="@dimen/padding_2x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/quote_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_1x"
            android:layout_marginLeft="@dimen/margin_2x"
            android:layout_marginRight="@dimen/margin_2x"
            android:layout_marginStart="@dimen/margin_2x"
            android:layout_marginTop="@dimen/margin_1x"
            android:maxWidth="240dp"
            android:minWidth="32dp"
            android:padding="@dimen/margin_1x"
            android:textColor="@color/messageTextColor"
            android:textSize="@dimen/quotes_text_font_size" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>